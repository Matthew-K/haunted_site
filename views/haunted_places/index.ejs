<% include ../partials/header.ejs %>

<div class="container">
	<div class="row" style="display:flex; flex-wrap: wrap;">
		<% haunted_places.forEach(function(spot){ %>
			<div class="col-xs-12 col-lg-4 col-sm-6">
				<div class="hauntedPlaceEntry">
					<div class="galleryPic">
						<img src="<%= spot.image %>" alt="<%= spot.name %>">
					</div>

					<div class="galleryDescription">
						<div class="galleryTitle">
							<%= spot.name %>
						</div>
						<div class="galleryDescriptionText">
							<%= spot.description%>
						</div>	
						<div class="indexSubmittedBy">Submitted by: <%= spot.author.username %></div>
					</div>
					<a class="btn btn-more-info btn-block" href="/haunted_places/<%= spot._id %>">Show More Info</a>
				</div>
			</div>
		<% }) %>
	</div>

	<div class="row">
		<div class="col-xs-12">
			<a class="btn btn-lg btn-orange btn-block btnAddHaunt" href="/haunted_places/new">Add Haunted Place</a>
		</div>
	</div>
</div>

<% include ../partials/footer.ejs %>